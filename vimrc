call pathogen#infect()
syntax enable
filetype plugin indent on
set number

set cindent
set tabstop=4
set softtabstop=4
set expandtab
set autoindent
set smartindent
set showmatch "move over parenthesis

" for searching
set incsearch
set hlsearch


colorscheme native

"let g:user_emmet_install_global=0
"let g:user_emmet_mode='a'
"let g:user_emmet_leader_key='<c-s>'
